<h1><%= @project.name %></h1>
<p>Material: <%= @project.material %></p>
<p>Challenge Theme: <%= @project.challenge.theme %></p>
<section id="contestant-count">
  <p>Number of Contestants: <%= @project.contestant_count %></p>
</section>

<section id ="average-years-exp">
  <p>Average Contestant Experience: <%= @project.contestants_average_experience %></p>
</section>

<%= form_tag "/projects/#{@project.id}" do %>
  <%= label_tag :contestant_id %>
  <%= text_field_tag :contestant_id %>
  <%= submit_tag "Add Contestant" %>
<% end %>
